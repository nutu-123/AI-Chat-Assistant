{
  "name": "nexaflow-ai-backend",
  "version": "2.0.0",
  "description": "NexaFlow AI - Multi-Provider AI Backend with Fallback System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest.e2e.config.js",
    "seed": "node scripts/seed.js",
    "docker:build": "docker build -t nexaflow-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env nexaflow-backend"
  },
  "keywords": [
    "ai",
    "chatbot",
    "gemini",
    "openai",
    "cohere",
    "multi-provider",
    "fallback"
  ],
  "author": "Nutan Phadtare",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "nodemailer": "^6.10.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
